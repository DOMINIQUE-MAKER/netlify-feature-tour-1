    script
         Configuration des graphiques
        window.onload = function() {
            const charts = {
                chart1 {
                    type 'radar',
                    data {
                        labels ['Valeur', 'Différenciation', 'Clarté', 'Garantie', 'Urgence'],
                        datasets [{
                            label 'Éléments Fondamentaux',
                            data [90, 85, 95, 88, 92],
                            backgroundColor 'rgba(52, 152, 219, 0.2)',
                            borderColor 'rgba(52, 152, 219, 1)'
                        }]
                    }
                },
                chart2 {
                    type 'bar',
                    data {
                        labels ['Offre Core', 'Bonus', 'Garantie'],
                        datasets [{
                            label 'Impact sur les Conversions',
                            data [85, 70, 90],
                            backgroundColor 'rgba(46, 204, 113, 0.6)'
                        }]
                    }
                },
                chart3 {
                    type 'line',
                    data {
                        labels ['Étape 1', 'Étape 2', 'Étape 3', 'Étape 4'],
                        datasets [{
                            label 'Taux de Conversion',
                            data [20, 40, 60, 85],
                            borderColor 'rgba(231, 76, 60, 1)',
                            fill false
                        }]
                    }
                }
            };

            Object.keys(charts).forEach(id = {
                const ctx = document.getElementById(id).getContext('2d');
                new Chart(ctx, charts[id]);
            });

             Gestion du téléchargement
            document.getElementById('downloadBtn').addEventListener('click', function(e) {
                e.preventDefault();
                alert('Le téléchargement va démarrer...');
                 Ici viendra le code de téléchargement
            });
        };
    script
